# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/medical_facility_dashboard
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=10

# Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRATION=30m
SESSION_TIMEOUT=30

# Nora RX MCP Server
NORA_MCP_SERVER_URL=http://localhost:8080
NORA_MCP_TIMEOUT=5000
NORA_MCP_RETRY_ATTEMPTS=3

# Open CLAW Agent
CLAW_AGENT_URL=http://localhost:9000
CLAW_AGENT_TIMEOUT=10000
CLAW_AGENT_HEALTH_CHECK_INTERVAL=10000

# WebSocket Configuration
WS_PORT=3001
WS_HEARTBEAT_INTERVAL=30000

# Security
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
CACHE_TTL=10
MAX_QUERY_TIMEOUT=5000
