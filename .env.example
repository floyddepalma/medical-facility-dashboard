# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/medical_facility_dashboard
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=10

# Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRATION=30m
SESSION_TIMEOUT=30

# CareSync MCP Server
CARESYNC_MCP_SERVER_URL=http://localhost:8080
CARESYNC_MCP_TIMEOUT=5000
CARESYNC_MCP_RETRY_ATTEMPTS=3
CARESYNC_MCP_COMMAND=node
CARESYNC_MCP_ARGS=/path/to/caresync-mcp-server/dist/index.js

# Open CLAW Agent
CLAW_AGENT_URL=http://localhost:8000
CLAW_AUTH_TOKEN=dashboard_token_12345
CLAW_API_KEY=claw_secret_key_12345
CLAW_AGENT_TIMEOUT=10000
CLAW_AGENT_HEALTH_CHECK_INTERVAL=30000
FACILITY_STATUS_INTERVAL=10000

# OpenCV Monitor
OPENCV_API_KEY=opencv_secret_key_789
OPENCV_WEBHOOK_URL=http://localhost:3000/api/webhooks/opencv/event

# WebSocket Configuration
WS_PORT=3001
WS_HEARTBEAT_INTERVAL=30000

# Security
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
CACHE_TTL=10
MAX_QUERY_TIMEOUT=5000
